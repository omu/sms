#!/usr/bin/env ruby
# frozen_string_literal: true

require 'sms'

def pretty(*args)
  require 'amazing_print'
  ap(*args)
rescue LoadError
  require 'pp'
  pp(*args)
end

def report(result)
  puts
  print 'Result: '
  if result.ok?
    pretty result.inspect
  else
    pretty result.error.to_s
  end
end

def main
  abort "Usage: #{$PROGRAM_NAME} key=value" if ARGV.size.zero?

  args = {}
  ARGV.each do |arg|
    abort "key=value require: #{arg}" unless (m = arg.match(/^(?<key>\w+)=(?<value>.*)/))

    args[m[:key].to_sym] = m[:value]
  end

  report SMS.(**args)
rescue SMS::Error => e
  abort("\nError: #{e.message}")
end

main
